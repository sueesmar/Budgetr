<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_expenditure"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2FDD86"
    android:baselineAligned="false"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:weightSum="1"
    tools:context="ch.msengineering.budgetr.ExpenditureActivity">

    <EditText
        android:id="@+id/etDescription"
        android:layout_width="139dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etAmount"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/etAmount"
        android:layout_weight="1"
        android:ems="10"
        android:hint="Description "
        android:inputType="text"
        android:textColor="@android:color/white" />

    <EditText
        android:id="@+id/etDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txAllRightReserved"
        android:layout_alignLeft="@+id/txAllRightReserved"
        android:layout_alignStart="@+id/txAllRightReserved"
        android:layout_marginBottom="19dp"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:layout_weight="1"
        android:ems="10"
        android:hint="Date"
        android:inputType="datetime" />

    <EditText
        android:id="@+id/etAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/etDate"
        android:layout_alignLeft="@+id/etReceipt"
        android:layout_alignStart="@+id/etReceipt"
        android:layout_marginBottom="45dp"
        android:layout_weight="1"
        android:ems="10"
        android:hint="Amount"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/etReceipt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txAllRightReserved"
        android:layout_marginTop="61dp"
        android:layout_weight="1"
        android:ems="10"
        android:hint="Receipt"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/etPlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:hint="Place"
        android:inputType="text" />

    <RelativeLayout
        android:layout_width="354dp"
        android:layout_height="205dp"
        android:layout_weight="0.59"
        android:gravity="center">


    </RelativeLayout>

    <ListView
        android:id="@+id/slPAymentmethode"
        android:layout_width="match_parent"
        android:layout_height="117dp" >

    </ListView>

</LinearLayout>
