<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2FDD86"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/pSignin"
        android:layout_width="220dp"
        android:layout_height="122dp"
        android:layout_weight="0.65"
        android:paddingTop="40dp"
        android:src="@drawable/logobudgetr" />

    <TextView
        android:id="@+id/txKnowYourMoney"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="1"
        android:paddingBottom="10dp"
        android:text="Know where your money goes"
        android:textColor="#ffffff"
        android:textSize="22dp" />
    <Button
        android:id="@+id/bSignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:accessibilityLiveRegion="none"
        android:background="@drawable/signupbutton"
        android:text="New to Budgetr" />

    <Button
        android:id="@+id/bSignin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:accessibilityLiveRegion="none"
        android:background="@drawable/signinbutton"
        android:text="Already using Budgetr" />

</LinearLayout>
