<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ch.msengineering.budgetr">

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <!-- TODO Change Logo in Launcher -->
    <application
        android:allowBackup="true"
        android:icon="@drawable/logobudgetr"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegisterActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".BalanceOverviewActivity" />
        <activity android:name=".ListEarningsActivity" />
        <activity android:name=".ListExpendituresActivity" />
        <activity android:name=".EditorEarningsActivity" />
        <activity android:name=".EditorExpendituresActivity"></activity>
        <provider
            android:name=".data.BudgetrProvider"
            android:authorities="ch.mse.myBudget"
            android:exported="false" />
    </application>

</manifest>